<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Impromptu.Views;assembly=Impromptu"
             xmlns:viewModels="clr-namespace:Impromptu.ViewModels;assembly=Impromptu"
             xmlns:effects="clr-namespace:Impromptu.Effects;assembly=Impromptu"
             BindingContext="{Binding Source={x:Static viewModels:DesignTimeViewModelLocator.MainPageViewModel}}"
             x:Class="Impromptu.Views.MainPage"
             Title="Home Page"
             BackgroundColor="{Binding BGColor}">

    <ListView x:Name="MainScheduleList" HasUnevenRows="True" VerticalOptions="FillAndExpand"
              BackgroundColor="Transparent" ItemsSource="{Binding TaskList}">
        <ListView.Margin>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS">0, 20, 0, 0</On>
                <On Platform="Android">0</On>
                <On Platform="WinPhone">0</On>
            </OnPlatform>
        </ListView.Margin>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <views:TaskItem />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.Effects>
            <effects:NoScrollListViewEffect />
        </ListView.Effects>
    </ListView>

</ContentPage>